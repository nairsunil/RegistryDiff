pipeline {
    agent any
    environment
    {
         GIT_PATH="D:\\LocalhostJenkins\\RegdiffProject"
    }
    stages {
        stage('build') {
            steps {
                bat 'whoami'
                 dir("${env.GIT_PATH}") {
                    checkout([$class: 'GitSCM', 
                    branches: [[name: '*/master']], 
                    doGenerateSubmoduleConfigurations: false, 
                    submoduleCfg: [], 
                    userRemoteConfigs: [[credentialsId: 'PATForSunilRepo', url: 'https://github.com/nairsunil/RegistryDiff.git']]])
                }
                
            }
        }
    }
    post{
        success{
            def commitMessage = bat(script: 'git log -1 --pretty=%B', returnStdout: true).trim()
            echo "Latest commit message: \${commitMessage}"
        }
    }
}
